<% content_for :finish do %>
  <div class="note">
  	In Kürze erhalten Sie eine e-mail mit <span class="tickets">Ihren Tickets und </span>allen Informationen zu Ihrer Bestellung.
  </div>
<% end %>
<% content_for :steps do %>
	<%= render "date" %>
	<%= render "seats" %>
	<%= render "address" %>
	<%= render "payment" %>
	<div class="stepCon confirm">
		<div class="note">Bitte kontrollieren Sie Ihre Bestellung noch einmal und klicken anschließend auf <em>bestellen</em>.</div>
    <%= render "confirm_tickets" %>
		<div class="address inner">
      <table class="rounded form">
        <thead>
          <tr>
            <th colspan="2">Ihre Angaben</th>
          </tr>
        </thead>
        <tbody>
      		<tr>
      			<td>Name:</td>
      			<td><span class="first_name"></span> <span class="last_name"></span></td>
      		</tr>
      		<tr>
      			<td>Telefonnummer:</td>
      			<td class="phone"></td>
      		</tr>
      		<tr>
      			<td>e-mail-Adresse:</td>
      			<td class="email"></td>
      		</tr>
        </tbody>
    	</table>
    </div>
		<div class="payment inner">
			<div class="transfer">
				Bezahlung per Überweisung. Unsere Kontodaten werden Ihnen nach der Bestellung per e-mail zugesandt.
			</div>
			<div class="charge">
				<table class="rounded form">
          <thead>
            <tr>
              <th colspan="2">Bezahlung per Lastschrift</th>
            </tr>
          </thead>
          <tbody>
  					<tr>
  						<td>Kontoinhaber:</td>
  						<td class="name"></td>
  					</tr>
  					<tr>
  						<td>Kontonummer:</td>
  						<td class="number"></td>
  					</tr>
  					<tr>
  						<td>BLZ:</td>
  						<td class="blz"></td>
  					</tr>
  					<tr>
  						<td>Name der Bank:</td>
  						<td class="bank"></td>
  					</tr>
          </tbody>
				</table>
			</div>
		</div>
    <table class="rounded checkboxes">
      <tr>
        <td><%= check_box_tag :newsletter, :yes, true %></td>
        <td><%= label_tag :newsletter do %>Ich möchte den kostenlosen Newsletter der Freilichtbühne am schiefen Turm erhalten, um alle Neuigkeiten rund um den Verein sofort zu erfahren.<% end %></td>
      </tr>
			<tr>
        <td><%= check_box_tag :accepted, :yes %></td>
        <td><%= label_tag :accepted do %>Ich akzeptiere die <%= link_to "AGB", agb_path, target: "_blank" %> der Freilichtbühne am schiefen Turm e.V.<% end %></td>
      </tr>
    </table>
	</div>
	<%= render "finish" %>
<% end %>
<%= render "framework" %>
