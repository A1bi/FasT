      <%= link_to "http://www.wunderground.com/q/zmw:00000.13.10613", target: "_blank" do %>
        <%= image_tag "info/wunderground.png", alt: "Weather Underground", title: "Wetterdaten zur Verfügung gestellt von Weather Underground" %>
      <% end %>
