<% title "Fotogalerie â€“ " + @gallery.title %>
<% include_css "galleries" %>
<% include_js "galleries" %>
<% content_for :head do %>
  <% cache @gallery do %>
    <script>
      (function () {
        var g = new Gallery("<%= @gallery.id %>");
        g.addPics([
      <% @photos.each do |photo| %>
          { id: <%= photo.id %>, path: "<%= photo.image.url(:big) %>", text: "<%= photo.text %>" },
      <% end %>
        ]);
        g.init();
      })();
    </script>
  <% end %>
<% end %>
<div class="photoFrame">
  <div class="photo"></div>
  <div class="directions">
    <div class="next">
      <div class="space"></div>
      <div class="arrow"></div>
    </div>
    <div class="prev">
      <div class="space"></div>
      <div class="arrow"></div>
    </div>
  </div>
  <div class="bar">
    <div class="number">Foto <span></span> von <span></span></div>
    <div class="desc"></div>
  </div>
</div>
<div class="info">
  <div class="desc"></div>
  <div class="disclaimer small">
    <%= @gallery.disclaimer %>
  </div>
  <% if policy(Photo).show? %>
    <div id="download-link">
      <%= link_to "Foto herunterladen", gallery_photo_path(gallery_id: @gallery.id, id: "-id-") %>
    </div>
  <% end %>
</div>
