<% title "Mitgliederverwaltung" %>
<div class="hl">Mitgliederverwaltung</div>
<%= render "new_button", :action => "neues Mitglied" %>
<table class="rounded">
	<thead>
		<tr>
			<th class="id">#</th>
			<th>Nachname</th>
			<th>Vorname</th>
			<th class="actions"></th>
		</tr>
	</thead>
	<tbody>
		<% @members.each do |member| %>
			<tr>
				<td class="id"><%= member.id %></td>
				<td><%= member.last_name %></td>
				<td><%= member.first_name %></td>
				<td class="actions">
					<%= link_to "bearbeiten", edit_admin_member_path(member) %>
					<%= link_to "löschen", [:admin, member], :method => :delete, :data => { :confirm => "Möchten Sie dieses Mitglied wirklich löschen?" } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>