<div class="cast">
  <% @cast.each do |role| %>
    <% if role[:doubles] %><div class="double"><% end %>
		<div class="row">
			<div class="role"><%= role[:name] %></div>
			<div class="actor">
        <% if role[:doubles] %>
          <% role[:doubles].each do |double| %>
            <%= double[:name] %><% if double != role[:doubles].last %> / <% end %>
          <% end %>
          <div class="small">Doppelbesetzung anzeigen</div>
        <% else %>
          <% role[:actors].each do |actor| %>
            <%= actor %><% if actor != role[:actors].last %><br /><% end %>
          <% end %>
        <% end %>
      </div>
		</div>
    <% if role[:doubles] %>
  			<div class="alt">
          <% role[:doubles].each do |double| %>
            <% dates = (double[:dates]) ? double[:dates] : @date_groups[double[:date_group]] %>
    				<div class="row">
    					<div class="role"><%= double[:name] %></div>
    					<div class="actor"><% dates.each do |date| %><span><%= l (@dates[date] || @dates.first).date, format: "%d.%m." %></span><% if date != dates.last %> | <% end %><% end %></div>
    				</div>
          <% end %>
  			</div>
      </div>
    <% end %>
  <% end %>
</div>