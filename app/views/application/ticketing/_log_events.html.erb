<h3>Protokoll</h3>
<table>
  <thead>
    <% if events.any? %>
      <tr>
        <th>Datum</th>
        <th>Aktion</th>
        <th>Benutzer</th>
      </tr>
    <% end %>
  </thead>
  <tbody>
    <% if events.size.zero? %>
      <tr>
        <td class="empty" colspan="3">Keine Protokolleintr√§ge vorhanden.</td>
      </tr>
    <% else %>
      <% events.reverse_order.each do |event| %>
        <tr>
          <td class="date"><%= l event.created_at, format: :medium %></td>
          <td><%= translate_log_event(event) %></td>
          <td><%= event.user.name&.full if event.user.present? %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
