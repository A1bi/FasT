.carousel
  - @featured_photos.each.with_index do |photo, i|
    = full_width_photo_tags(photo, class: [:photo, i.zero? ? :active : 'd-none'], alt: @featured_event.name, data: { event_identifier: @featured_event.identifier }, loading: 'lazy')
  .title.outline-sm.active data-event-identifier=@featured_event.identifier
    = link_to event_path(@featured_event.slug)
      = event_logo(@featured_event, inline_svg: true)
  - if @featured_gallery.disclaimer.present?
    .caption.text-end Fotos: #{@featured_gallery.disclaimer}

.container data-controller='items-reveal' data-items-reveal-initial-items-value=5 data-items-reveal-reveal-step-value=3
  h1#programm Programm

  - @upcoming_dates.each do |date|
    = structured_data_for_date(date)
    .card.schedule.mb-2 class=('cancelled' if date.cancelled?) data-items-reveal-target='item'
      .row
        .col-3.col-md-2
          = l date.date, format: '%A'
          .day = l date.date, format: '%-d'
          = l date.date, format: '%B'
        .col-9.col-md-7
          .info
            .segment.location
              i.bi.bi-geo-alt-fill
              = date.event.location.name
            .segment
              i.bi.bi-clock-fill
              = l date.date, format: '%H:%M'
          .title
            = link_to_if event_page_exists?(date.event), date.event.name, event_path(date.event.slug)
          .subtitle = date.event.info['subtitle']
        .col.col-md-3.tickets
          - unless date.cancelled?
            - if date.sold_out?
              button.btn.w-100(disabled) derzeit ausverkauft
            - elsif date.event.ticketing_enabled?
              - if date.event.sale_start&.past?
                = link_to 'Tickets', new_ticketing_order_path(date.event.slug, date_id: date), class: 'btn w-100'
              - else date.event.sale_start&.future?
                button.btn.w-100(disabled)
                  .d-inline-block Tickets ab
                  .d-inline-block =< l(date.event.sale_start, format: '%-d. %B')
            - elsif (sale_url = date.event.info['external_sale_url']).present?
              = link_to 'Tickets', sale_url, class: 'btn w-100'
      - if date.cancelled?
        .cancelled-banner entfällt

  .text-center.mb-3 data-items-reveal-target='revealButton'
    button.btn data-action='items-reveal#revealMore' weitere Termine anzeigen

