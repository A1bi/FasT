- title 'Logo-Generator'

.container.logo-generator data-controller='admin--logo-generator'
  h1 Logo-Generator
  .card.mb-2
    .row
      - %w[Theater Kultur Kaisersesch i-Punkt].each.with_index do |word, i|
        .col
          label for="color#{i}" = word
          input type='color' name="color#{i}" data-action='admin--logo-generator#setColorsFromInputs' data-admin--logo-generator-target='color'
    .row: .col.text-center
      button.btn.me-1 data-action='admin--logo-generator#shuffleColors'
        i.bi.bi-shuffle
        span Farben w√ºrfeln
      button.btn data-action='admin--logo-generator#rotateColors'
        i.bi.bi-arrow-clockwise
        span Farben rotieren
  .card: .row.align-items-center data-admin--logo-generator-target='logos'
    .col = inline_svg 'logos/l1.svg'
    .col = inline_svg 'logos/l2_center.svg'
    .col = inline_svg 'logos/l3_right.svg'
