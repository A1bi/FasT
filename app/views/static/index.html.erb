<% include_css "index" %>
<% include_js "index" %>
<% sale_started = Ticketing::Event.current.sale_started? %>
<% file = Rails.root.join("public", "uploads", "index_alert.json") %>
<div class="index">
  <% if File.exists? file %>
    <% cache [:static, :index, :alert, File.mtime(file).to_i] do %>
      <% info = JSON.parse(File.read(file), symbolize_names: true) %>
      <div class="alert">
        <div><%= info[:title] %></div>
        <%= info[:text].html_safe %>
      </div>
    <% end %>
  <% end %>
  <% cache [:static, :index, sale_started] do %>
    <div class="teaser alice_wunderland">
      <ul class="links">
        <li>
          <%= link_to "Termine", dates_path %>
        </li>
        <% if sale_started %>
          <li>
            <%= link_to "Tickets bestellen", new_ticketing_order_path %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="trenner"></div>
    <%= render "newsletter/form" %>
    <div class="partner-lotto">
      <span class="disclaimer">Mit freundlicher Unterst√ºtzung von:</span>
      <div>
        <%= link_to "https://www.lotto-rlp.de", target: "_blank" do %>
          <%= image_tag "misc/partner-lotto.jpg" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
