<% include_css "index" %>
<div class="index">
  <% if File.exists? @alert_file %>
    <% cache [:alert, File.mtime(@alert_file).to_i] do %>
      <% info = JSON.parse(File.read(@alert_file), symbolize_names: true) %>
      <div class="alert">
        <div><%= info[:title] %></div>
        <%= info[:text].html_safe %>
      </div>
    <% end %>
  <% end %>

  <% @events.each do |event| %>
    <div class="teaser <%= event.identifier %>">
      <%= image_tag "theater/#{event.assets_identifier}/title.svg", alt: event.name %>
      <div class="links">
        <% if theater_play_path_exists?(event) %>
          <%= link_to 'Über das Stück', theater_play_path(event.slug) %> |
        <% end %>
        <%= link_to 'Termine', dates_event_identifier_path(event.identifier) %>
        <% if !event.sale_started? %>
          | <span>Tickets ab <%= l event.sale_start, format: '%-d. %B' %></span>
        <% elsif event.on_sale? %>
          <% if event.sold_out? %>
            | <span>Derzeit ausverkauft</span>
          <% else %>
            | <%= link_to 'Tickets bestellen', new_ticketing_order_identifier_path(event.identifier) %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="trenner"></div>
  <% end %>

  <%= render "dates/teaser_dates" %>
  <div class="trenner"></div>

  <%= render "newsletter_subscribers/form" %>

  <div class="partner">
    <span class="disclaimer">Mit freundlicher Unterstützung durch</span>
    <ul>
      <li>
        <%= link_to image_tag("misc/partner_innogy.svg", alt: "Innogy"), "https://www.innogy.com", target: "_blank" %>
      </li>
      <li>
        <%= link_to image_tag("misc/partner_lotto.svg", alt: "Lotto Stiftung Rheinland-Pfalz"), "https://www.lotto-rlp.de/lotto-stiftung/stiftungsportrait", target: "_blank" %>
      </li>
    </ul>
  </div>
</div>
