<% title "Statistik" %>
<% include_css "ticketing/statistics" %>
<% cache [Ticketing::Ticket.all, current_retail_store, @transfers] do %>
  <div class="stats">
    <div class="hl">Ticket-Statistik</div>
    <% @events.each do |event| %>
      <% stats = stats_for_event(event) %>
      <h4 class="hcen"><%= event.name %></h4>
      <div class="table active">
        <%= render "stats_table", scopes: [{ title: "Statistik fÃ¼r Ihre Vorverkaufsstelle", scope: stats_for_event(event)[:retail][:stores][current_retail_store.id] }], event: event, retail: true %>
      </div>
    <% end %>
    <div class="hl">Kassenstand</div>
    <table class="rounded billing">
      <thead>
        <tr>
          <th>Datum</th>
          <th>Anmerkung</th>
          <th>Bestellung</th>
          <th>Betrag</th>
        </tr>
      </thead>
      <tbody>
        <% @transfers.each do |transfer| %>
          <tr>
            <td class="date"><%= l transfer.created_at, format: "%d.%m.%y, %H:%M" %></td>
            <td><%= t transfer.note_key, { scope: [:ticketing, :orders, :balancing] } %></td>
            <td>
              <% participant = transfer.participant ? transfer.participant.billable : nil %>
              <% if participant.is_a?(Ticketing::Order) %>
                <%= link_to "##{participant.number}", orders_path(:ticketing_order, participant) %>
              <% end %>
            </td>
            <td class="amount <%= -transfer.amount < 0 ? "negative" : "positive" %>"><%= format_billing_amount(-transfer.amount) %></td>
          </tr>
        <% end %>
        <tr class="total">
          <td colspan="3">Saldo</td>
          <td class="amount <%= !current_retail_store.billing_account.outstanding? ? "negative" : "positive" %>">
            <%= format_billing_amount(-current_retail_store.billing_account.balance) %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
