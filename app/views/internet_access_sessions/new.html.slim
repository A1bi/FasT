= form_with url: internet_access_sessions_path do |f|
  - if flash.alert
    p.alert = flash.alert

  p = f.text_field :email, value: params[:email], placeholder: 'E-Mail-Adresse'
  p = f.password_field :password, placeholder: 'Passwort'
  p = f.submit 'anmelden'

p.forgot = link_to 'Passwort vergessen?', forgot_password_members_member_path
