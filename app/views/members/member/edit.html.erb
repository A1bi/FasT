<% title "Mitgliedskonto bearbeiten" %>
<div class="hl">Mein Mitgliedskonto bearbeiten</div>
<%= render "errors", :errors => current_user.errors %>
<%= form_for current_user, :url => members_member_path do |f| %>
<table class="rounded panel">
  <tr>
    <td>Vorname:</td>
    <td><%= current_user.first_name %></td>
  </tr>
  <tr>
    <td>Nachname:</td>
    <td><%= current_user.last_name %></td>
  </tr>
  <tr>
    <td>e-mail-Adresse:</td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td>
      Neues Passwort:
      <div class="small">Frei lassen, wenn du dein Passwort nicht ändern möchtest.</div>
    </td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td>Neues Passwort wiederholen:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>
<div class="submit">
  <%= f.submit "speichern" %>
</div>
<% end %>
