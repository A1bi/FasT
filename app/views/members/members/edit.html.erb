<% title "Mitgliedskonto bearbeiten" %>
<div class="hl">Mein Mitgliedskonto</div>
<%= render "errors", :errors => @_member.errors %>
<%= form_for @_member, :url => members_member_path do |f| %>
<table class="rounded panel">
	<tr>
		<td>Vorname:</td>
		<td><%= @_member.first_name %></td>
	</tr>
	<tr>
		<td>Nachname:</td>
		<td><%= @_member.last_name %></td>
	</tr>
	<tr>
		<td>e-mail-Adresse:</td>
		<td><%= f.text_field :email %></td>
	</tr>
	<tr>
		<td>Passwort:</td>
		<td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<td>Passwort wiederholen:</td>
		<td><%= f.password_field :password_confirmation %></td>
	</tr>
</table>
<div class="submit">
	<%= f.submit "speichern" %>
</div>
<% end %>